// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {Int
  name       String   @id
  city       String
  createdOn  DateTime @default(now()) @map("created_on")
  updatedOn  DateTime @updatedAt @map("updated_on")

  @@map("teachers")
}

model country {
  id              Int    @id
  continent       String
  iso_country     String
  regions         region[] // Add this line to establish the opposite relation
}

model region {
  id              Int   @id
  iso_region      String
  municipality    String
  gps_code        String
  local_code      String
  countries       country[]
  airports        airport[] // Add this line to establish the opposite relation
}

model airport {
  id              Int     @id
  ident           String
  type            String
  name            String
  elevation_ft    String
  iata_code       String
  coordinates     String
  regions         region[]
}


